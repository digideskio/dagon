#!/usr/bin/env dagon

require("readline")

trap("INT") ->
  exit

Idg:
  read-line:
    Readline.readline("idg:> ", true)

  read-next-line:
    Readline.readline("idg:..", true)

  start:
    lines: []
    line: void

    while true
      if lines.any?
        line: read-next-line
      else
        line: read-line

      lines.push(line)

      begin ->
        if line = void
          if lines.count > 1
            result: eval(lines.join("\n"))
            print("=> ")
            puts(result.inspect)
          exit
        else
          if !line.start-with?("  ") && !line.contains?("->")
            result: eval(lines.join("\n"))
            print("=> ")
            puts(result.inspect)
            lines: []
      rescue ->(e)
        puts(e.message)

idg: Idg()
idg.start()
