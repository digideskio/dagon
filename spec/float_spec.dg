describe("Decimal") ->
  it("is equal to an identical decimal") ->
    assert-equal(1.2, 1.2)

  it("addable") ->
    assert-equal(1.2 + 0.8, 2.0)

  it("subtractable") ->
    assert-equal(1.2 - 0.2, 1.0)

  it("can compare to integers") ->
    assert-equal(2.0, 2)

  it("does not have float problems") ->
    assert-equal(0.1 + 0.2, 0.3)
